{
  "extends": [
    "eslint:recommended"
  ],

  "parserOptions": {
    "sourceType": "module"
  },

  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true
  },

  "rules": {
    "curly": 0,
    "eol-last": 1,
    "eqeqeq": 2,
    "indent": [2, 2],
    "no-throw-literal": 2,
    "no-unused-vars": [2, {"vars": "all", "args": "none"}],
    "no-var": 0,
    "prefer-const": 1,
    "prefer-template": 1,
    "quotes": [2, "single"],
    "radix": 1,
    "semi": 1,
    "comma-dangle": 0
  }
}
